<div class="white-wrapper">
  <div class="container">
    <h1> Welcome to <%= @restaurant.name %></h1>
    <div class="row">
      <div class="wrapper-reserve">

        <div class="card-restaurant-show">
          <h3><%= @restaurant.name %></h3>
          <p><%= @restaurant.opening_hours %></p>
          <p><%= @restaurant.cuisine %></p>
          <p> Category: <%= @restaurant.category %></p>
          <p> Dress Code:<%= @restaurant.dresscode %></p>
          <p><%= @restaurant.cuisine %></p>
          <p><%= @restaurant.email %></p>
          <p> TEL: <%= @restaurant.tel %></p>
          <p><%= @restaurant.address %></p>
          <p><%= @restaurant.city %></p>
          <p><%= @restaurant.country %></p>
        </div>

        <%= cl_image_tag @restaurant.picture, class: "img-tag-card" %>

        <div class="form-reservation card">
          <%= simple_form_for [@restaurant, @reservation], html: {class: "datepicker-form"}, method: "post", url: customers_restaurant_reservations_path(@restaurant) do |f| %>
                <%= f.input :time, as: :string, required: true, input_html: {class: "datepicker"} %>
                <%= f.input :seats, as: :integer, required: true %>
                <%= f.input :request, as: :text, required: false %>
                <%= hidden_field_tag 'restaurant_id', @restaurant.id %>
                <%= f.button :submit, "Reserve", class: "btn btn-danger btn-center" %>
          <% end %>
        </div>

      </div>

      <div class="card-reviews">
        <h3>Reviews</h3>
        <% @restaurant.reviews.each do |review| %>
          <%= review.customer.name %>
          <%= review.comment %>
          <%= review.rating %>
        <% end %>
      </div>

    <%= render "shared/map" %>
      <%= link_to "Back", root_path %>
    </div>
      <br>
  </div>

</div>


